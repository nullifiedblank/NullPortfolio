    <script>
        // Initialize Icons
        lucide.createIcons();

        // Navbar scroll effect
        const navbar = document.getElementById('navbar');
        window.addEventListener('scroll', () => {
            if (window.scrollY > 50) {
                navbar.classList.add('border-gray-200', 'shadow-sm');
                navbar.classList.replace('bg-white/80', 'bg-white/95');
            } else {
                navbar.classList.remove('border-gray-200', 'shadow-sm');
                navbar.classList.replace('bg-white/95', 'bg-white/80');
            }
        });

        // Mobile Menu Toggle
        const mobileMenu = document.getElementById('mobile-menu');
        function toggleMobileMenu() {
            if (mobileMenu.classList.contains('-translate-x-full')) {
                mobileMenu.classList.remove('-translate-x-full');
            } else {
                mobileMenu.classList.add('-translate-x-full');
            }
        }

        // Simple Cart Logic
        let count = 0;
        const cartCount = document.getElementById('cart-count');
        const toast = document.getElementById('toast');
        let toastTimeout;

        function addToCart(e) {
            // Stop propagation if triggered from a card button to prevent link following
            if(e) e.stopPropagation();

            // Update Counter
            count++;
            cartCount.innerText = count;
            cartCount.classList.remove('opacity-0');
            
            // Pop effect on badge
            cartCount.classList.add('scale-125');
            setTimeout(() => cartCount.classList.remove('scale-125'), 200);

            // Show Toast
            toast.classList.remove('translate-x-64');
            
            // Clear existing timeout if multiple clicks
            if (toastTimeout) clearTimeout(toastTimeout);
            
            // Hide toast after 3 seconds
            toastTimeout = setTimeout(() => {
                toast.classList.add('translate-x-64');
            }, 3000);
        }
    </script>
